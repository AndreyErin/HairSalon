@model IEnumerable<string>

<div class="container">
    <div class="row text-center mt-3">
        <h1>Добавить изображение</h1>
    </div>

    <div class="row mt-3">
        <h4>Доступные изображения</h4>
    </div>

    <div class="row">

        @foreach (string item in Model)
        {
            <div class="col-auto">
                <img class="m-1" src="@item" height="50" width="50" />

                <form method="post" asp-action="DeletePicture">

                    <input hidden name="fileShortPath" value="@item" />
                    <button class="badge bg-danger text-black"  type="submit" style="position:relative; top: -65px; left: 40px">X</button>
                </form>
            </div>
        }
    </div>


    <div class="row mt-3">
        <h4>Загрузить изображение</h4>
    </div>

    <form enctype="multipart/form-data" method="post" asp-controller="Services" asp-action="AddPictures">
        <input class="form-control" type="file" name="files" accept="image/jpg,image/jpeg" multiple required />
        <br />
        <div class="row">
            <div class="col text-end">
                <button type="submit" class="btn btn-sm btn-success">Загрузить</button>
            </div>
            <div class="col text-start">
                <a class="btn btn-warning btn-sm" asp-action="Index">Отмена</a>
            </div>
        </div>
    </form>

</div>
