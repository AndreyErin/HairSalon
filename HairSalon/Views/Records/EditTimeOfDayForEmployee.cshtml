@model TimeForRecordModel[]

@{
    string title = Model[0].Date.ToString() + " " + Model[0].EmployeeId;
}

<div class="container">
    <div class="row text-center">
        <h1>@title</h1>
    </div>

    <form asp-action="SetTimeOfDayForEmployee" method="post">

        @for (int i = 0; i < Model.Length; i++)
        {
            <div class="row">
                <div class="col">
                    <label>@Model[i].Time</label>
                    <input hidden asp-for="@Model[i].Time" />
                    <input hidden asp-for="@Model[i].Date" />
                    <input hidden asp-for="@Model[i].Record" />
                    <input hidden asp-for="@Model[i].EmployeeId" />
                </div>
                <div class="col">
                    <label>@Model[i].Record?.ClientName</label>
                </div>
                <div class="col">
                    <label>@Model[i].Record?.ClientPhone</label>
                </div>
                <div class="col">
                    <label>@Model[i].Record?.SeviceName</label>
                </div>
                <div class="col">
                    <input type="checkbox" asp-for="@Model[i].isEnable" />
                </div>
            </div>
        }

        <button class="btn btn-sm btn-success" type="submit">Сохранить</button>
    </form>

</div>