@model IEnumerable<DayForRecordsModel>

<div class="container">
    <div class="row text-center">
        <h1>Дни для записи</h1>
    </div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col">
                <input asp-for="@item.Day"/>
            </div>
            <div class="col">
                <input asp-for="@item.IsEnable" type="checkbox"/>
            </div>

        </div>
    }

</div>
