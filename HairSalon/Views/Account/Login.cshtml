@model LoginModel

<div class="container">
    <div class="row text-center">
        <h1>Вход в систему</h1>
    </div>

    <form asp-action="Login" method="post">
        <div class="row">
            <div class="col"></div>
            <div class="col-auto ">
                <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
            </div>
            <div class="col"></div>
        </div>
        

        <div class="row m-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" required class="form-control" />
        </div>

        <div class="row m-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" required class="form-control" />
        </div>
        <div class="row mt-3">
            <div class="col  text-center">
                <button class="btn btn-sm btn-primary" type="submit">Вход</button>
            </div>
        </div>
    </form>
</div>
